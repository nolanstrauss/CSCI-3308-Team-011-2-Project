<header>
  <nav class="navbar navbar-expand-sm border-bottom">
    <div class="container">
      <button
        class="navbar-toggler ms-auto"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar-collapse"
        aria-controls="navbar"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <!-- For Discover, the link is dynamic: directs to /calendar if logged in, or the home page otherwise -->
            <a class="nav-link" href="{{#if user}}/calendar{{else}}/{{/if}}">View Calendar</a>
          </li>
        </ul>
        <div class="d-flex">
          <!-- If a user is logged in, show the Logout option -->
          {{#if user}}
            <div class="nav-item me-1">
              <a class="nav-link" href="/logout">Logout</a>
            </div>
          {{else}}
            <!-- Otherwise, show Login and Register options -->
            <div class="nav-item me-1">
              <a class="nav-link" href="/login">Login</a>
            </div>
            <div class="nav-item me-1">
              <a class="nav-link" href="/register">Register</a>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </nav>
</header>
