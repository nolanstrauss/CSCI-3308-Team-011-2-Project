<header>
  <nav class="navbar navbar-expand-lg shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">

      <!-- Website Name -->
      <a class="navbar-brand fw-bold text-white" href="{{#if user}}/calendar{{else}}/welcome{{/if}}">
        TimeBridge Calendar
      </a>

      <!-- Toggler for Mobile View -->
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar-collapse"
        aria-controls="navbar-collapse"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Navigation Links -->
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="navbar-nav me-auto">
          <!-- View Calendar -->
          <li class="nav-item">
            <a class="nav-link text-white" href="/calendar">View Calendar</a>
          </li>
          <!-- Manage Invitations -->
          <li class="nav-item">
            <a class="nav-link text-white" href="/manage-invitations">Manage Invitations</a>
          </li>
        </ul>

        <!-- Right-Side Navigation -->
        <ul class="navbar-nav ms-auto">
          {{#if user}}
            <!-- Logged-in dropdown -->
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle text-white"
                href="#"
                id="userDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Welcome, {{user.username}}
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="/settings">Settings</a></li>
                <li><a class="dropdown-item" href="/invitations">Invitations</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
              </ul>
            </li>
          {{else}}
            {{#if routeIsLogin}}
              <li class="nav-item">
                <a class="nav-link btn btn-outline-primary px-3 text-white" href="/register">Register</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link btn btn-outline-primary px-3 text-white" href="/login">Login</a>
              </li>
            {{/if}}
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
</header>
