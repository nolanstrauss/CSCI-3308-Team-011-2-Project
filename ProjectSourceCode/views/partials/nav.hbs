<header>
  <nav class="navbar navbar-expand-sm border-bottom">
    <div class="container">
      <!-- Replace "timebridge" with any name or logo you prefer -->
      <a class="navbar-brand" href="/">timebridge</a>
      <button
        class="navbar-toggler ms-auto"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbar-collapse"
        aria-controls="navbar-collapse"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item custom-box">
            <!-- Link directs to /calendar if logged in, or the home page otherwise -->
            <a class="nav-link" href="{{#if user}}/calendar{{else}}/{{/if}}">View Calendar</a>
          </li>
        </ul>
        <div class="d-flex">
          {{#if user}}
            <div class="nav-item me-1">
              <a class="nav-link" href="/logout">Logout</a>
            </div>
          {{else}}
            <!-- Custom styled boxes for Login and Register -->
            <div class="nav-item me-1 custom-box">
              <a class="nav-link" href="/login">Login</a>
            </div>
            <div class="nav-item me-1 custom-box">
              <a class="nav-link" href="/register">Register</a>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  /* Custom styling for nav items with boxes */
  .custom-box {
    border: 1px solid #ccc;
    padding: 5px 10px;
    border-radius: 5px;
    display: inline-flex;
    align-items: center;
    min-height: 40px; /* Adjust this value as needed to match your design */
  }

  .custom-box .nav-link {
    margin: 0;
  }
</style>
