<!DOCTYPE html>
<html lang="en">
<head>
 <meta charset="UTF-8">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <title>Account Settings</title>
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
 <style>
   /* General Body Styling */
   html, body {
     height: 100%;
     margin: 0;
     padding: 0;
     font-family: 'Roboto', Arial, sans-serif; /* Use Roboto as the primary font */
     background: linear-gradient(to bottom, #FFF, #e8d4ff); /* Light purple gradient */
   }


  
   body {
     display: flex;
     flex-direction: column;
     min-height: 140vh;
   }


   .container {
     flex-grow: 1; /* Ensures the container stretches to fill the remaining space */
   }
  


  h1 {
 color: ##000; /* Purple heading color */
 font-weight: bold; /* Make the title bold */
}


   .btn-primary {
     border: 2px solid #6c5ce7; /* Purple outline */
     background-color: transparent; /* Transparent background */
     color: #6c5ce7; /* Purple text */
     transition: background-color 0.3s, color 0.3s;
   }


   .btn-primary:hover {
     background-color: #6c5ce7; /* Pale darkish purple background */
     color: #fff; /* White text */
   }


   .btn-danger {
     border: 2px solid #d9534f; /* Red outline */
     background-color: transparent; /* Transparent background */
     color: #d9534f; /* Red text */
     transition: background-color 0.3s, color 0.3s;
   }


   .btn-danger:hover {
     background-color: #d9534f; /* Red background */
     color: #fff; /* White text */
   }


   .btn-secondary {
     border: 2px solid #6c757d; /* Gray outline */
     background-color: transparent; /* Transparent background */
     color: #6c757d; /* Gray text */
     transition: background-color 0.3s, color 0.3s;
   }


   .btn-secondary:hover {
     background-color: #6c757d; /* Gray background */
     color: #fff; /* White text */
   }
   .card-header.bg-primary {
     background-color: #6c5ce7 !important; /* Purple background */
     color: #fff; /* White text */
   }
 </style>
</head>
<body>
 <h1 class="text-center my-4">Account Settings</h1>


 <div class="container">
   <!-- Display Success or Error Messages -->
   {{#if error}}
     <div class="alert alert-danger text-center">{{message}}</div>
   {{/if}}


   {{#if success}}
     <div class="alert alert-success text-center">{{message}}</div>
   {{/if}}


   <!-- Change Username -->
   <div class="card mb-4">
     <div class="card-header bg-primary text-white">
       <h5>Change Username</h5>
     </div>
     <div class="card-body">
       <form action="/settings/change-username" method="POST">
         <div class="mb-3">
           <label for="new-username" class="form-label">New Username:</label>
           <input type="text" id="new-username" name="new_username" class="form-control" required>
         </div>
         <button type="submit" class="btn btn-primary">Change Username</button>
       </form>
     </div>
   </div>


   <!-- Change Password -->
   <div class="card mb-4">
     <div class="card-header bg-primary text-white">
       <h5>Change Password</h5>
     </div>
     <div class="card-body">
       <form action="/settings/change-password" method="POST">
         <div class="mb-3">
           <label for="current-password" class="form-label">Current Password:</label>
           <input type="password" id="current-password" name="current_password" class="form-control" required>
         </div>
         <div class="mb-3">
           <label for="new-password" class="form-label">New Password:</label>
           <input type="password" id="new-password" name="new_password" class="form-control" required>
         </div>
         <button type="submit" class="btn btn-primary">Change Password</button>
       </form>
     </div>
   </div>


   <!-- Delete Account -->
   <div class="card mb-4">
     <div class="card-header bg-danger text-white">
       <h5>Delete Account</h5>
     </div>
     <div class="card-body">
       <form action="/settings/delete-account" method="POST">
         <p class="text-danger">Warning: This action cannot be undone.</p>
         <button type="submit" class="btn btn-danger">Delete Account</button>
       </form>
     </div>
   </div>


   <!-- Log Out -->
   <div class="card mb-4">
     <div class="card-header bg-secondary text-white">
       <h5>Log Out</h5>
     </div>
     <div class="card-body">
       <form action="/logout" method="GET">
         <button type="submit" class="btn btn-secondary">Log Out</button>
       </form>
     </div>
   </div>
 </div>
</body>
</html>
