<!-- register.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    html, body { height:100%; margin:0; padding:0; font-family:Arial,sans-serif; background:linear-gradient(to bottom,#FFF,#e8d4ff); }
    main { min-height:100vh; display:flex; justify-content:center; align-items:center; }
    .register-container { background:#fff; padding:20px 30px; border-radius:8px; box-shadow:0 2px 8px rgba(0,0,0,0.1); width:400px; text-align:center; }
    .register-container h1 { margin-bottom:20px; font-size:28px; }
    form div { margin-bottom:15px; text-align:left; }
    label { display:block; margin-bottom:5px; font-weight:bold; }
    input[type="email"], input[type="password"] { width:100%; padding:10px; font-size:16px; border:1px solid #ccc; border-radius:4px; box-sizing:border-box; }
    button#registerButton { width:100%; padding:10px; font-size:18px; border:2px solid #6c5ce7; border-radius:4px; background:transparent; color:#6c5ce7; cursor:pointer; transition:background-color 0.3s,color 0.3s; }
    button#registerButton:hover { background:#6c5ce7; color:#fff; }
  </style>
</head>
<body>
  <main>
    <div class="register-container">
      <h1>Register</h1>
      {{> message}}
      <form action="/register" method="POST">
        <div>
          <label for="username">Email</label>
          <input type="email" id="username" name="username" required>
        </div>
        <div>
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required>
        </div>
        <div>
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" required>
        </div>
        <button id="registerButton" type="submit">Register</button>
      </form>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
  <script>
    const form = document.querySelector('form');
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirmPassword');

    form.addEventListener('submit', e => {
      if (passwordInput.value !== confirmPasswordInput.value) {
        e.preventDefault();
        alert('Passwords do not match. Please try again.');
      }
    });
  </script>
</body>
</html>
